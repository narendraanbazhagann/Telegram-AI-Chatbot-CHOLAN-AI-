# Cholan AI Bot Environment Variables
# Copy this file to .env and fill in your actual values

# ========== REQUIRED API KEYS ==========
# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN="TELEGRAM TOKEN FROM BOT FATHER"

# Google Gemini AI API Key
GEMINI_API_KEY="YOUR API KEYYY"

# ========== OPTIONAL SETTINGS ==========
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Bot environment (development, production)
BOT_ENV=development

# Maximum warnings before ban
MAX_WARNINGS=3

# ========== DEVELOPMENT SETTINGS ==========
# Enable debug mode (true/false)
DEBUG_MODE=false

# Enable test mode (true/false)
TEST_MODE=false

# ========== ADVANCED CONFIGURATION ==========
# Gemini AI model temperature (0.0 to 1.0)
AI_TEMPERATURE=0.7

# Maximum AI response length
MAX_AI_RESPONSE_LENGTH=500

# Poll interval in seconds
POLL_INTERVAL=1
